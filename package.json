{
  "name": "gltf-bulk-optimizer",
  "version": "0.9.0",
  "description": "A tool for optimizing GLTF files in bulk.",
  "homepage": "https://github.com/ignawesome/gltf-bulk-optimizer",
  "repository": "ignawesome/gltf-bulk-optimizer",
  "license": "MIT",
  "author": "ignawesome",
  "main": "./main.js",
  "module": "./dist/src/module.js",
  "types": "./dist/src/index.d.ts",
  "bin": {
    "gltf-optimizer": "./main.js"
  },
  "scripts": {
    "start": "electron-forge start",
    "build": "tsc -p ./tsconfig.build.json",
    "test": "pnpm clear && jest",
    "test:cov": "pnpm clear && jest --coverage",
    "clear": "rimraf bin/*.js && rimraf bin/*.d.ts && rimraf src/**/*.js && rimraf src/**/*.d.ts",
    "lint": "eslint --ext .ts .",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@types/draco3d": "^1.4.2",
    "@types/electron": "^1.6.12",
    "@types/jest": "^29.2.4",
    "@types/jest-plugin-context": "^2.9.5",
    "@types/node": "^18.19.68",
    "@types/sharp": "^0.31.1",
    "@types/yargs": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "electron": "^33.2.1",
    "eslint": "^8.30.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "jest-plugin-context": "^2.9.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@gltf-transform/core": "2.4.7",
    "@gltf-transform/extensions": "2.4.7",
    "@gltf-transform/functions": "2.4.7",
    "draco3d": "^1.5.6",
    "electron-squirrel-startup": "^1.0.1",
    "meshoptimizer": "^0.18.1",
    "sharp": "^0.33.5",
    "webp-converter-browser": "^1.0.3",
    "yargs": "^17.6.2"
  },
  "engines": {
    "node": "^18.17.0"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dist/**/*",
      "./node_modules/electron/**/*",
      "./node_modules/sharp/build/Release/**/*",
      "./node_modules/sharp/vendor/lib/**/*",
      "./node_modules/sliced/index.js",
      "./node_modules/deep-defaults/lib/index.js",
      "./node_modules/gl-matrix/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  },
  "build": {
    "appId": "com.ignawesome.gltf-bulk-optimizer",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/sharp/build/Release/",
        "to": "node_modules/sharp/build/Release/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/sharp/vendor/lib/",
        "to": "node_modules/sharp/vendor/lib/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
